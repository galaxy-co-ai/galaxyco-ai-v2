# GalaxyCo.ai API - Environment Variables
# Copy this file to .env.local and fill in your values

# =============================================================================
# Server Configuration
# =============================================================================
PORT=4000
NODE_ENV=development
# Options: development, staging, production

# =============================================================================
# Database (Neon Postgres)
# =============================================================================
DATABASE_URL=postgres://username:password@hostname/database?sslmode=require
# Get from: https://console.neon.tech → Connection Details
# Example: postgres://user:pass@ep-cool-name-123456.us-east-2.aws.neon.tech/galaxyco?sslmode=require

# =============================================================================
# Redis (Upstash)
# =============================================================================
REDIS_URL=redis://default:password@hostname:port
# Get from: https://console.upstash.com → Database → Redis Connect
# Example: redis://default:AbC123@us1-meet-dog-12345.upstash.io:6379

# =============================================================================
# Authentication (Clerk)
# =============================================================================
CLERK_SECRET_KEY=sk_test_XXXXXXXXXXXXXXXXXXXXXXXXXXXX
# Get from: https://dashboard.clerk.com → API Keys

CLERK_WEBHOOK_SECRET=whsec_XXXXXXXXXXXXXXXXXXXXXXXXXXXX
# Get from: https://dashboard.clerk.com → Webhooks

# =============================================================================
# Payments (Stripe)
# =============================================================================
STRIPE_SECRET_KEY=sk_test_XXXXXXXXXXXXXXXXXXXXXXXXXXXX
# Get from: https://dashboard.stripe.com → Developers → API Keys

STRIPE_WEBHOOK_SECRET=whsec_XXXXXXXXXXXXXXXXXXXXXXXXXXXX
# Get from: https://dashboard.stripe.com → Developers → Webhooks

# Stripe Price IDs (create products first, then copy IDs here)
STRIPE_PRICE_FREE=price_XXXXXXXXXXXXXXXXXXXX
STRIPE_PRICE_PRO=price_XXXXXXXXXXXXXXXXXXXX
STRIPE_PRICE_TEAM=price_XXXXXXXXXXXXXXXXXXXX
STRIPE_PRICE_BUSINESS=price_XXXXXXXXXXXXXXXXXXXX
STRIPE_PRICE_CREDITS_20=price_XXXXXXXXXXXXXXXXXXXX
STRIPE_PRICE_CREDITS_100=price_XXXXXXXXXXXXXXXXXXXX

# =============================================================================
# S3 Storage (AWS)
# =============================================================================
S3_BUCKET_NAME=galaxyco-artifacts
S3_REGION=us-east-1
AWS_ACCESS_KEY_ID=AKIAXXXXXXXXXXXX
AWS_SECRET_ACCESS_KEY=XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX

# =============================================================================
# Agents Service
# =============================================================================
AGENTS_SERVICE_URL=http://localhost:5001
# Production: http://agents-service-internal:5001

# =============================================================================
# CORS Configuration
# =============================================================================
CORS_ORIGIN=http://localhost:3000
# Production: https://app.galaxyco.ai

# =============================================================================
# JWT Configuration
# =============================================================================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# =============================================================================
# Error Tracking (Sentry) - Optional
# =============================================================================
SENTRY_DSN=https://XXXXXXXXXXXX@sentry.io/XXXXXXX
# Get from: https://sentry.io → Settings → Projects → Client Keys (DSN)

# =============================================================================
# Observability (Datadog) - Optional
# =============================================================================
DATADOG_API_KEY=XXXXXXXXXXXXXXXXXXXXXXXXXXXX
DATADOG_SITE=datadoghq.com
# Get from: https://app.datadoghq.com → Integrations → APIs

# =============================================================================
# Rate Limiting
# =============================================================================
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=60000

# =============================================================================
# Feature Flags
# =============================================================================
ENABLE_MARKETPLACE=true
ENABLE_BUILDER=true
ENABLE_SIM_MODE=true
ENABLE_AUTO_APPROVE=false
