# GalaxyCo.ai Web App - Environment Variables
# Copy this file to .env.local and fill in your values

# =============================================================================
# API Configuration
# =============================================================================
NEXT_PUBLIC_API_URL=http://localhost:4000
# Production: https://api.galaxyco.ai

# =============================================================================
# Authentication (Clerk)
# =============================================================================
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_XXXXXXXXXXXXXXXXXXXXXXXXXXXX
# Get from: https://dashboard.clerk.com → API Keys

# =============================================================================
# Payments (Stripe)
# =============================================================================
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_XXXXXXXXXXXXXXXXXXXXXXXXXXXX
# Get from: https://dashboard.stripe.com → Developers → API Keys

# =============================================================================
# Analytics (PostHog) - Optional
# =============================================================================
NEXT_PUBLIC_POSTHOG_KEY=phc_XXXXXXXXXXXXXXXXXXXXXXXXXXXX
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com
# Get from: https://posthog.com

# =============================================================================
# Error Tracking (Sentry) - Optional
# =============================================================================
NEXT_PUBLIC_SENTRY_DSN=https://XXXXXXXXXXXX@sentry.io/XXXXXXX
# Get from: https://sentry.io → Settings → Projects → Client Keys (DSN)

# =============================================================================
# Feature Flags
# =============================================================================
NEXT_PUBLIC_ENABLE_MARKETPLACE=true
NEXT_PUBLIC_ENABLE_BUILDER=true
NEXT_PUBLIC_ENABLE_SIM_MODE=true

# =============================================================================
# Environment
# =============================================================================
NEXT_PUBLIC_ENV=development
# Options: development, staging, production
