# GalaxyCo.ai Agents Service - Environment Variables
# Copy this file to .env and fill in your values

# =============================================================================
# Server Configuration
# =============================================================================
PORT=5001
ENV=development
# Options: development, staging, production

# =============================================================================
# Database (Neon Postgres)
# =============================================================================
DATABASE_URL=postgres://username:password@hostname/database?sslmode=require
# Get from: https://console.neon.tech → Connection Details
# Example: postgres://user:pass@ep-cool-name-123456.us-east-2.aws.neon.tech/galaxyco?sslmode=require

# =============================================================================
# Redis (Upstash)
# =============================================================================
REDIS_URL=redis://default:password@hostname:port
# Get from: https://console.upstash.com → Database → Redis Connect
# Example: redis://default:AbC123@us1-meet-dog-12345.upstash.io:6379

# =============================================================================
# LLM Providers
# =============================================================================

# OpenAI (Primary)
OPENAI_API_KEY=sk-proj-XXXXXXXXXXXXXXXXXXXXXXXXXXXX
# Get from: https://platform.openai.com → API Keys
OPENAI_ORG_ID=org-XXXXXXXXXXXXXXXXXXXX
# Optional: Get from: https://platform.openai.com → Settings → Organization

# Anthropic (Optional)
ANTHROPIC_API_KEY=sk-ant-XXXXXXXXXXXXXXXXXXXXXXXXXXXX
# Get from: https://console.anthropic.com → API Keys

# Model Configuration
DEFAULT_LLM_MODEL=gpt-4-turbo-preview
# Options: gpt-4-turbo-preview, gpt-4, gpt-3.5-turbo, claude-3-opus, claude-3-sonnet

DEFAULT_EMBEDDING_MODEL=text-embedding-3-large
# Options: text-embedding-3-large, text-embedding-3-small, text-embedding-ada-002

# =============================================================================
# Tool Integrations
# =============================================================================

# Gmail
GMAIL_CLIENT_ID=XXXXXXXXXXXX.apps.googleusercontent.com
GMAIL_CLIENT_SECRET=GOCSPX-XXXXXXXXXXXXXXXXXXXX
# Get from: https://console.cloud.google.com → APIs & Services → Credentials

# Google Calendar
GOOGLE_CALENDAR_CLIENT_ID=XXXXXXXXXXXX.apps.googleusercontent.com
GOOGLE_CALENDAR_CLIENT_SECRET=GOCSPX-XXXXXXXXXXXXXXXXXXXX

# Slack
SLACK_CLIENT_ID=XXXXXXXXXXXX.XXXXXXXXXXXX
SLACK_CLIENT_SECRET=XXXXXXXXXXXXXXXXXXXXXXXXXXXX
SLACK_SIGNING_SECRET=XXXXXXXXXXXXXXXXXXXXXXXXXXXX
# Get from: https://api.slack.com/apps → Your App → Basic Information

# HubSpot
HUBSPOT_CLIENT_ID=XXXXXXXXXXXX-XXXXXXXXXXXX-XXXXXXXXXXXX
HUBSPOT_CLIENT_SECRET=XXXXXXXXXXXX-XXXXXXXXXXXX-XXXXXXXXXXXX
# Get from: https://app.hubspot.com → Settings → Integrations → Private Apps

# Salesforce (Optional)
SALESFORCE_CLIENT_ID=XXXXXXXXXXXXXXXXXXXXXXXXXXXX
SALESFORCE_CLIENT_SECRET=XXXXXXXXXXXXXXXXXXXXXXXXXXXX
# Get from: Salesforce Setup → Apps → App Manager

# =============================================================================
# S3 Storage (AWS)
# =============================================================================
S3_BUCKET_NAME=galaxyco-artifacts
S3_REGION=us-east-1
AWS_ACCESS_KEY_ID=AKIAXXXXXXXXXXXX
AWS_SECRET_ACCESS_KEY=XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX

# =============================================================================
# Agent Configuration
# =============================================================================
MAX_RETRIES=3
RETRY_DELAY_MS=1000
TIMEOUT_MS=30000
MAX_TOKENS_PER_REQUEST=4000

# Orchestration
ENABLE_SELF_HEALING=true
ENABLE_PAA=true
ENABLE_SIM_MODE=true

# Performance Budgets
MAX_LATENCY_P95_MS=12000
MAX_COST_PER_OUTCOME_USD=2.00

# =============================================================================
# Error Tracking (Sentry) - Optional
# =============================================================================
SENTRY_DSN=https://XXXXXXXXXXXX@sentry.io/XXXXXXX
# Get from: https://sentry.io → Settings → Projects → Client Keys (DSN)

# =============================================================================
# Observability
# =============================================================================
LOG_LEVEL=info
# Options: debug, info, warn, error

ENABLE_TRACING=true
ENABLE_METRICS=true

# Datadog (Optional)
DATADOG_API_KEY=XXXXXXXXXXXXXXXXXXXXXXXXXXXX
DATADOG_SITE=datadoghq.com

# =============================================================================
# Feature Flags
# =============================================================================
ENABLE_KNOWLEDGE_RETRIEVAL=true
ENABLE_CITATIONS=true
ENABLE_APPROVALS=true
ENABLE_AUTO_APPROVE=false
