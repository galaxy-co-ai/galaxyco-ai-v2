{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": [
    "DATABASE_URL",
    "NODE_ENV",
    "CLERK_SECRET_KEY",
    "CLERK_WEBHOOK_SECRET",
    "ENCRYPTION_KEY",
    "OPENAI_API_KEY",
    "REDIS_URL",
    "NEXT_PUBLIC_*"
  ],
  "tasks": {
    "dev": {
      "cache": false,
      "persistent": true
    },
    "build": {
      "outputs": ["dist/**", ".next/**", "!dist/**/*.tsbuildinfo"],
      "dependsOn": ["^build"],
      "env": [
        "DATABASE_URL",
        "NODE_ENV",
        "CLERK_SECRET_KEY",
        "CLERK_WEBHOOK_SECRET",
        "ENCRYPTION_KEY",
        "OPENAI_API_KEY",
        "REDIS_URL",
        "NEXT_PUBLIC_*"
      ]
    },
    "lint": {
      "outputs": []
    },
    "typecheck": {
      "outputs": []
    },
    "test": {
      "outputs": ["coverage/**"],
      "dependsOn": ["build"]
    },
    "clean": {
      "cache": false
    }
  }
}
