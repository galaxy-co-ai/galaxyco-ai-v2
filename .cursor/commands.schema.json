{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "description": "Schema for Cursor custom commands configuration",
  "properties": {
    "commands": {
      "type": "array",
      "description": "Array of custom commands",
      "items": {
        "type": "object",
        "required": ["name", "command", "description"],
        "properties": {
          "name": {
            "type": "string",
            "description": "Unique command name (no spaces, lowercase)",
            "pattern": "^[a-z0-9-]+$"
          },
          "command": {
            "type": "string",
            "description": "Command to execute"
          },
          "description": {
            "type": "string",
            "description": "Human-readable description"
          },
          "category": {
            "type": "string",
            "description": "Command category (optional)",
            "enum": ["development", "testing", "deployment", "utility"]
          },
          "args": {
            "type": "array",
            "description": "Command arguments (optional)",
            "items": {
              "type": "object",
              "properties": {
                "name": { "type": "string" },
                "required": { "type": "boolean" },
                "description": { "type": "string" }
              },
              "required": ["name"]
            }
          }
        },
        "additionalProperties": false
      }
    }
  },
  "required": ["commands"],
  "additionalProperties": false
}
