{
  "name": "@galaxyco/database",
  "version": "0.1.0",
  "private": true,
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./schema": {
      "types": "./dist/schema.d.ts",
      "default": "./dist/schema.js"
    },
    "./client": {
      "types": "./dist/client.d.ts",
      "default": "./dist/client.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "typecheck": "tsc --noEmit",
    "db:generate": "NODE_OPTIONS=\"--import tsx\" drizzle-kit generate --config=drizzle.config.cjs",
    "db:migrate": "NODE_OPTIONS=\"--import tsx\" drizzle-kit migrate --config=drizzle.config.cjs",
    "db:push": "NODE_OPTIONS=\"--import tsx\" drizzle-kit push --config=drizzle.config.cjs",
    "db:studio": "NODE_OPTIONS=\"--import tsx\" drizzle-kit studio --config=drizzle.config.cjs",
    "db:check": "NODE_OPTIONS=\"--import tsx\" drizzle-kit check --config=drizzle.config.cjs"
  },
  "dependencies": {
    "@neondatabase/serverless": "^1.0.2",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.44.6"
  },
  "devDependencies": {
    "@types/node": "^20.19.19",
    "drizzle-kit": "^0.31.5",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.6",
    "typescript": "^5.5.0"
  }
}
